<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BackupAutomatizado8.MainPage"
             Title="Backup Automatizado by flaYe">

    <VerticalStackLayout
        Padding="30"
        Spacing="25"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <Label
            Text="BACKUP AUTOMATIZADO"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Entry
            Placeholder="CAMINHO ARQUIVOS LOCAIS"
            x:Name="localPathEntry"
            WidthRequest="500"
            HorizontalOptions="Fill"
            Text=""/>

        <Entry
            Placeholder="CAMINHO BACKUP"
            x:Name="backupPathEntry"
            WidthRequest="500"
            HorizontalOptions="Fill"
            Text=""/>

        <Button
            Text="FAZER BACKUP"
            BackgroundColor="LightGreen"
            WidthRequest="300"
            HeightRequest="50"
            HorizontalOptions="Fill"
            Clicked="OnBackupClicked" />

        <Button
            Text="RESTAURAR BACKUP"
            BackgroundColor="LightCoral"
            WidthRequest="300"
            HeightRequest="50"
            HorizontalOptions="Fill"
            Clicked="OnRestoreClicked" />

    </VerticalStackLayout>

</ContentPage>
